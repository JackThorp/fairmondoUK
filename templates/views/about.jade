extends ../layouts/default

block intro
  h1(style="text-align:center;") What is Fairmondo?

block content

  .container-fluid
    .row
      .col-xs-10.col-xs-offset-1
        img.centered-img(src="images/fairmondo-.svg" style="margin: 20px auto; max-height:300px")

    .row(style='padding-top: 50px; padding-bottom: 50px ;background-color: #6aa84f')
      .col-xs-12.col-sm-10.col-sm-offset-1(style='text-align:center; color: white')
        != data['what_is_fairmondo'].content.html

    hr 

    .row#the_one
      .col-xs-12.col-sm-10.col-sm-offset-1
        .row
          .col-sm-4
            img.about-img.centered-img(src=data['the_one'].image.url)
          .col-sm-8
            h1 The One
            .text-center
              != data['the_one'].content.html
    hr

    .row#easy
      .col-xs-12.col-sm-10.col-sm-offset-1
        .row
          .col-sm-4.col-sm-push-8
            img.about-img.centered-img(src=data['easy'].image.url)
          .col-sm-8.col-sm-pull-4
            h1 Easy
            .text-center
              != data['easy'].content.html
    hr

    .row#cooperative
      .col-xs-12.col-sm-10.col-sm-offset-1
        .row
          .col-sm-4
            img.about-img.centered-img(src=data['cooperative'].image.url)
          .col-sm-8
            h1 Cooperative 
            .text-center
              != data['cooperative'].content.html
    hr

    .row#roadmap
      .col-xs-12
        h1.text-center Roadmap
        img.centered-img(src!= data['roadmap'].image.url style="max-width:100%")

    .row(style='background-color: #ffd966')
      .col-xs-10.col-xs-offset-1(style='text-align:center;')
        h1= data['aims'].sectionTitle
        div(style='font-size:1.5em; text-align: left;list-style-type: none')
          != data['aims'].content.html
    
